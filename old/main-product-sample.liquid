<style>
    
    .product-reference {
        display: grid;
        grid-auto-flow: row;
        display: none;
    }
    .product-reference h1 {
        font-size: 1rem;
        color: brown;
    }
</style>
<div class="product-reference" >
    <h1>available</h1>
    <div>{{- product.available  -}}</div>
    <h1>product_collections</h1>
    {% for collection in product.collections %}
    <div>{{- collection.title -}}</div>
    {% endfor %}
    <h1>compare_at_price</h1>
    <div>{{- product.compare_at_price -}}</div>

    <h1>compare_at_price_max</h1>
    <div>{{- product.compare_at_price_max -}}</div>

    <h1>compare_at_price_min</h1>
    <div>{{- product.compare_at_price_min -}}</div>

    <h1>created_at</h1>
    <div>{{- product.created_at -}}</div>

    <h1>featured_media</h1>
    <pre>product.featured media | image_url: width:100 | image_tag</pre>
    <div>{{- product.featured_media | image_url: width:100 | image_tag -}}</div>

    <h1>first_available_variant</h1>
    <div>{{- product.first_available_variant -}}</div>
    <h1>gift_card?</h1>
    <div>{{- product.gift_card? -}}</div>
    <h1>handle</h1>
    <div>{{- product.handle -}}</div>
    <h1>has_only_default_variant</h1>
    <div>{{- product.has_only_default_variant -}}</div>
    <h1>requires_selling_plan</h1>
    <div>{{- product.requires_selling_pan -}}</div>

    

</div>
{%- # Product Images -%}
{%- assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image -%}

<a href="{{ featured_image | img_url: '1024x' }}">
  <img src="{{ featured_image | img_url: '1024x' }}" alt="{{ featured_image.alt | escape }}">
</a>

{%- # Product Variant Selector -%}

{% render 'product-variant-radio' product:product %}